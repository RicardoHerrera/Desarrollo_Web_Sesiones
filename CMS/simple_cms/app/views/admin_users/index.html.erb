<% @page_title = "All Admin users" %>

<%= link_to("<< Back to Menu", admin_path, :class => 'back-link') %>

<div class="Admin_user index">
  <h2> Admin users </h2>
  </div>
  <%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>
  <%= link_to('Add New Admin',
              new_admin_user_path,
              :class => 'action new') %>

  <div><%= pluralize(@admins.size, 'admin user') %> found</div>

  <table class="listing" summary="Admin users list">
    <tr class="header">
      <th>Full name</th>
      <th>Email</th>
      <th>Username</th>
      <th>Actions</th>
    </tr>
    <% @admins.each do |admin| %>
      <tr>
          <td><%= admin.name %></td>
          <td><%= mail_to(admin.email) %></td>
          <td><%= admin.username %></td>
          <td class="actions">
            <%= link_to('Edit', edit_admin_user_path(admin), :class => 'action edit') %>
            <%= link_to('Delete', delete_admin_user_path(admin), :class => 'action delete') %>
          </td>
      </tr>
    <% end %>
  </table>

</div>
